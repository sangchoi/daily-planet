<% include ../partials/header.ejs %>

<h1>Articles</h1>
<br>
<a id="newLink" href="/articles/new">Add New Article</a>

<% myArticles.forEach(function(article, id) { %>
    <div class="articlebox">
        <h3><%= article.title %></h3>
        <p><%= article.body %></p>
        <a id="editLink" href="/articles/<%= id %>/edit">Edit</a>
        <form method="POST" action="/articles/<%= id %>/?_method=DELETE">
            <input id="deleteButton" type="submit" value="Delete">
        </form>
    </div>
<% }) %>




